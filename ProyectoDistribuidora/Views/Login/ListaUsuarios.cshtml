@model IEnumerable<ProyectoDistribuidora.Models.Usuarios>

@{
    ViewData["Title"] = "ListaUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListaUsuarios</h1>

<div class="table-responsive" id="box_lista">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoCedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contrasena)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdRol)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contrasena)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdRol)
                    </td>
                    <td>
                        <a class="btn btn-dark text-light" data-toggle="modal" data-target="#P-@item.Cedula">Detalles</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Cedula">Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Cedula">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    @foreach (var item in Model)
    {
        //modal para cada producto a mostrar dentro de la vista Modal
        //modal= vista que se abre dentro del mismo entrono web
        <div id="P-@item.Cedula" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*Va desplegar el titulo de la vista modal*@
                        <h5 class="modal-title">Usuario </h5>
                        @*Botón de cerrar de la vista modal*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">

                        <div class="text-left mb-4">
                            <p>Nombre Usuario: @item.NombreCompleto</p>
                        </div>
                        <div class="text-left mb-4">
                            <p>Email: @item.Email</p>
                        </div>
                        <div class="text-left mb-4">
                            <p>Dirección: @item.Direccion</p>
                        </div>
                        <div class="text-left mb-4">
                            <p>Telefono: @item.Telefono</p>
                        </div>
                        <div class="text-left mb-4">
                            <p>Fecha Ingreso: @item.FechaIngreso</p>
                        </div>

                        <img src="~/css/imagenes/j0432625.png" alt="Usuario" class="img-fluid" />

                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    } @*fin del ciclo*@
</div>

