@model ProyectoDistribuidora.Models.Usuarios

@{
    ViewData["Title"] = "Delete";
}

<h6>Estás seguro que quieres eliminar al usuario?</h6>
<br />
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">

        <div class="card">
            <div class="card-header">
                <p class="card-title">Eliminar Usuario</p>
            </div>
            <div class="card-body">

                <dl class="row">
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Cedula)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Cedula)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.TipoCedula)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.TipoCedula)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.NombreCompleto)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.NombreCompleto)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.FechaIngreso)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.FechaIngreso)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Contrasena)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Contrasena)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.IdRol)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.IdRol)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Cedula" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a asp-action="ListaUsuarios">Volver a la lista</a>
                </form>

            </div>
        </div>
    </div>
 <div class="col-sm-2"></div>


</div>
